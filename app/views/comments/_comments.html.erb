<h1><%= Comment.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Comment.human_attribute_name(:comment) %></th>
      <th><%= Comment.human_attribute_name(:updated_at) %></th>
      <th><%= Comment.human_attribute_name(:name) + '/' + Comment.human_attribute_name(:email) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% commentable.comments.each do |comment| %>
      <tr>
        <td><%= comment.comment %></td>
        <td><%= l(comment.updated_at) %></td>
        <% unless User.find(comment.user_id).name == '' %>
          <td><%= User.find(comment.user_id).name %></td>
        <% else %>
          <td><%= User.find(comment.user_id).email %></td>
        <% end %>
        <% if current_user.id == comment.user_id %>
          <td><%= link_to t('views.common.edit'), edit_polymorphic_path([commentable, comment]) %></td>
          <td><%= link_to t('views.common.destroy'), [commentable, comment], method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
