<h1><%= Comment.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Comment.human_attribute_name(:comment) %></th>
      <th><%= Comment.human_attribute_name(:updated_at) %></th>
      <th><%= Comment.human_attribute_name(:name) + '/' + Comment.human_attribute_name(:email) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% commentable.comments.eager_load(:user).find_each do |comment| %>
      <tr>
        <% if comment == @comment %>
          <td><%= t('.editing') %></td>
        <% else %>
          <td><%= comment.comment %></td>
          <td><%= l(comment.updated_at) %></td>
          <% unless comment.user.name == '' %>
            <td><%= comment.user.name %></td>
          <% else %>
            <td><%= comment.user.email %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
