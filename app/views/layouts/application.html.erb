<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>BooksApp</h1>
      <nav>
        <% if user_signed_in? %>
          <%= link_to t('views.common.books_list'), books_path %>
          <%= link_to t('views.common.users_list'), users_path %>
          <%= link_to t('views.common.profile_edit'), edit_user_registration_path %>
          <%= link_to t('views.common.logout'), destroy_user_session_path, method: :delete %>
        <% end %>
      </nav>
    </header>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
