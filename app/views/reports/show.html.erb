<p>
  <strong><%= Report.human_attribute_name(:title) %></strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:body) %></strong>
  <%= @report.body %>
</p>

<%= link_to t('views.common.edit'), edit_user_report_path(@report.user_id, @report) %> |
<%= link_to t('views.common.back'), user_reports_path(@report.user_id) %>

<% if @comment %>
  <%= render 'comments/edit_comments', {commentable: @report} %>
  <%= render 'comments/edit_form', {commentable: @report, comment: @comment} %>
<% else %>
  <%= render 'comments/comments', {commentable: @report} %>
  <%= render 'comments/form', {commentable: @report} %>
<% end %>
