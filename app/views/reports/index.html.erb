<h1><%= Report.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:body) %></th>
      <th><%= User.human_attribute_name(:name) + '/' + User.human_attribute_name(:email) %></th>
      <th><%= Report.human_attribute_name(:updated_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.find_each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.body %></td>
        <% unless report.user.name == '' %>
          <td><%= report.user.name %></td>
        <% else %>
          <td><%= report.user.email %></td>
        <% end %>
        <td><%= l(report.updated_at) %></td>
        <td><%= link_to t('views.common.show'), report_path(report) %></td>
        <% if current_user.id == report.user_id %>
          <td><%= link_to t('views.common.edit'), edit_report_path(report) %></td>
          <td><%= link_to t('views.common.destroy'), report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @reports %>

<br>

<%= link_to t('views.common.new'), new_report_path %>
